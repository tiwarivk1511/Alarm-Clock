<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.world_clock.WorldClockFragment">

    <TextView
        android:id="@+id/titleWorldClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="World Clock"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- AnalogClock -->
    <AnalogClock
        android:id="@+id/modernAnalogClock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:dial="@drawable/custom_dial"
        android:hand_hour="@drawable/custom_hour_hand"
        android:hand_minute="@drawable/custom_minute_hand"
        android:hand_second="@drawable/custom_second_hand"
        android:scaleType="centerInside"
        android:tint="@color/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleWorldClock" />

    <!-- RecyclerView for World Clocks -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWorldClock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modernAnalogClock"
        tools:listitem="@layout/world_clock_layout" />

    <!-- Add World Clock Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddWorldClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/primaryDark"
        android:rotation="360"
        android:saveEnabled="false"
        android:src="@drawable/baseline_add_circle_outline_24"
        android:stateListAnimator="@anim/nav_default_enter_anim"
        android:tint="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/background" />
</androidx.constraintlayout.widget.ConstraintLayout>