<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    title -->
    <TextView
        android:id="@+id/timerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <!-- Timer Display -->
    <TextView
        android:id="@+id/timerDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginTop="16dp"
        android:textColor="@color/textPrimary"
        android:textSize="72sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerTitle" />

    <!-- Timer Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/timerInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerDisplay">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/timerInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:hint="Set Timer (minutes)"
            android:importantForAccessibility="yes"
            android:contentDescription="Timer Input"
            android:textSize="24sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Start/Stop Timer Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/startStopCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/timerInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/startStopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:background="@android:color/transparent"
            android:textSize="18sp" />


    </com.google.android.material.card.MaterialCardView>


    <!-- Play/Pause Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/playPauseCard"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/background"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/playPauseButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Play"
            android:padding="6dp"
            android:src="@drawable/outline_play_circle_24"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            app:tint="@color/primaryDark" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
